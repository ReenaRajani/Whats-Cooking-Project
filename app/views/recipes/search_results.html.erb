<!-- Display Page for the recipes found based on the results -->
<p>List of Recipes Found </p>



<div class="row">
  <div class="box">
    <div class="col-lg-12">
      <hr>
      <h3 class="intro-text text-center">List of 
          <strong>Recipes Found </strong>
      </h3>
      <h3 class="intro-text text-center">Search Results for keyword 
          <strong> <%= @title %> </strong>
      </h3>

      <hr>
    </div>
      <% @recipes.each do |recipe| %>
         <div class="col-sm-4 text-center">
            <a href="<%= recipe.source_url %>"> 
              <img class="img-responsive img-rounded" src="<%= recipe.image_url %>" alt="">
              <small><%= recipe.title %></small>
              <% if  @current_user.present? %>
                <%= form_tag("/users/favorite", method: "post" , remote: "true") do %>
                  <input type="hidden" name="recipeid" value="<%= recipe.id %>">
                  <%= submit_tag "Favorite it"%>
                 <% end %>

              <% end %>
            </a>
           </div>

        <% end %>
     
      <div class="clearfix"></div>
  </div>
</div>
